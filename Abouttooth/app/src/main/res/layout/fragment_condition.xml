<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:padding="0dp"
    tools:context=".Tabs.Condition.ConditionFragment"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/sky"
        android:layout_height="204dp"
        android:weightSum="1">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="119dp">

            <ImageButton
                android:layout_width="183dp"
                android:layout_height="88dp"
                android:layout_gravity="center"
                android:background="@drawable/graphsample"

                android:id="@+id/conmainimgbtn" />
        </FrameLayout>

        <TextView
            android:text="GRAPH"
            android:textAlignment="center"
            android:textColor="#ffffff"

            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aaaaa"
            android:layout_weight="0.25" />

        <TextView
            android:text="Nick Name"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bbbbb" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <TextView
            android:text="GRAPH"
            android:paddingTop="20dp"
            android:onClick="con_graph"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:id="@+id/contxtv1" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#434343"/>
        <TextView
            android:text="PICTURE"
            android:paddingTop="20dp"
            android:onClick="con_picture"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:id="@+id/contxtv2" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#434343"/>
        <TextView
            android:text="TIMER"
            android:onClick="con_timer"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:id="@+id/contxtv3" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="#434343"/>
        <TextView
            android:text="MY FLA"
            android:onClick="con_myfla"
            android:layout_width="match_parent"
            android:paddingTop="20dp"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:id="@+id/contxtv4" />

    </LinearLayout>
</LinearLayout>
